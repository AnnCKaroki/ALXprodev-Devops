#!/bin/bash

# Make sure the data.json file exists
if [ ! -f data.json ]; then
  echo "data.json not found. Please fetch the data."
  exit 1
fi

# Extract values using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')
height=$(jq '.height' data.json | awk '{ printf "%.1f", $1 / 10 }')
weight=$(jq '.weight' data.json | awk '{ print $1 / 10 }')
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')

# Print formatted output
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
